@inject DocumentManagementSystem.Services.UserService UserService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">DMS</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">

        <!-- Home -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">
                <i class="bi bi-house-door-fill"></i> Home
            </NavLink>
        </div>

        <!-- Documents -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/documents">
                <i class="bi bi-folder-fill"></i> Documents
            </NavLink>
        </div>

        <!-- Upload -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/upload">
                <i class="bi bi-cloud-upload-fill"></i> Upload
            </NavLink>
        </div>

        <!-- ADMIN ONLY LINKS -->
        @if (UserService.CurrentRole == "Admin")
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/admin/users">
                    <i class="bi bi-people-fill"></i> Users
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/admin/offices">
                    <i class="bi bi-building"></i> Manage Offices
                </NavLink>
            </div>
        }

        <!-- Settings -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/settings">
                <i class="bi bi-gear-fill"></i> Settings
            </NavLink>
        </div>

        <!-- Logout -->
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="/logout">
                <i class="bi bi-box-arrow-right"></i> Logout
            </NavLink>
        </div>

    </nav>
</div>
