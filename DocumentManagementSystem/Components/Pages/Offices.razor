@page "/offices"

<h3>Offices</h3>

<div class="input-group mb-3">
    <input class="form-control" placeholder="Add new office..." @bind="NewOffice" />
    <button class="btn btn-primary" @onclick="AddOffice">Add</button>
</div>

<ul class="list-group">
    @foreach (var office in OfficeList)
    {
        <li class="list-group-item d-flex justify-content-between">
            @office
            <button class="btn btn-sm btn-danger" @onclick="() => RemoveOffice(office)">Delete</button>
        </li>
    }
</ul>

@code {
    private string NewOffice = "";

    // FIX: renamed from "Offices" â†’ "OfficeList"
    private List<string> OfficeList = new()
    {
        "HR",
        "Accounting",
        "Supply",
        "Admin"
    };

    private void AddOffice()
    {
        if (!string.IsNullOrWhiteSpace(NewOffice))
        {
            OfficeList.Add(NewOffice);
            NewOffice = "";
        }
    }

    private void RemoveOffice(string office)
    {
        OfficeList.Remove(office);
    }
}