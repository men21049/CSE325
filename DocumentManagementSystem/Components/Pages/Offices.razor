@page "/offices"
@rendermode InteractiveServer
@using DocumentManagementSystem.Services
@inject OfficeService OfficeService
<AuthRedirect />
<h3>Offices</h3>

<div class="input-group mb-3">
    <input class="form-control" placeholder="Add new office..." @bind="NewOffice" />
    <button class="btn btn-primary" @onclick="AddOffice">Add</button>
</div>

<ul class="list-group">
    @foreach (var office in OfficeList)
    {
        <li class="list-group-item d-flex justify-content-between">
            @office.OfficeName
            <button class="btn btn-sm btn-danger" @onclick="() => RemoveOffice(office.OfficeName)">Delete</button>
        </li>
    }
</ul>

@if (!string.IsNullOrEmpty(Message))
{
    <div class="alert alert-info mt-3">@Message</div>
}

@code {
    private string NewOffice = "";
    private List<OfficeService.OfficeInfo> OfficeList = new();
    private string Message = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            await OfficeService.RefreshOfficesAsync();
            OfficeList = OfficeService.GetOffices().ToList();
        }
        catch (Exception ex)
        {
            Message = $"Warning: Could not load offices from database. Using default list. Error: {ex.Message}";
        }
    }

    private async Task AddOffice()
    {
        if (!string.IsNullOrWhiteSpace(NewOffice))
        {
            try
            {
                await OfficeService.AddOfficeAsync(NewOffice);
                await OfficeService.RefreshOfficesAsync();
                OfficeList = OfficeService.GetOffices().ToList();
                NewOffice = "";
                Message = "Office added successfully.";
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Message = $"Error adding office: {ex.Message}";
                StateHasChanged();
            }
        }
    }

    private async Task RemoveOffice(string office)
    {
        try
        {
            await OfficeService.RemoveOfficeAsync(office);
            await OfficeService.RefreshOfficesAsync();
            OfficeList = OfficeService.GetOffices().ToList();
            Message = "Office removed successfully.";
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Message = $"Error removing office: {ex.Message}";
            StateHasChanged();
        }
    }
}